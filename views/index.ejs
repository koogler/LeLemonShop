<body>


    <!-- Top nav bar (fixed) -->

    <nav>
      <div class="logo-container"><img id="logo" src="/images/##.png">LE-LEMON</div>
        <p class="customer-greeting">Welcome!</p>
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <a class="nav-link" href="/my-orders">MY ORDERS</a>
          </li>
          <li class="nav-item">
            <form action="/api/" method="POST">
              <button type="submit" class="btn btn-primary">LOGOUT</button>
            </form>
          </li>
        </ul>
    </nav>


    <!-- main container of the page -->

    <main id="main-container">


      <!-- menu section -->

      <section id="section-container1">

        <div id="menu" class="row row-cols-md-3 g-4">

          <!-- ALL the menu items are populated here using jQuery -->

        </div>
      </section>


      <!-- Order summary section -->

      <section class="card" id="order-container">
        <header class="order-header">
          <h5 class="card-title">Order Summary</h5>
          <button type="button" class="btn btn-primary" id="clear-cart">Clear</button>
        </header>

        <form id="order-now" action="/api/orders" method="POST">
          <section class="item-list">
            <table class="order-table">
              <thead>
                <tr>
                  <th scope="col" class="order-item-name">Item</th>
                  <th scope="col" class="order-quantity">Quantity</th>
                  <th scope="col" class="order-price">Price</th>
                </tr>
              </thead>

              <!-- Items added to cart are populated/appended here using jQuery -->

              <tbody id="selected-items-container"></tbody>

            </table>
            <p class='message-to-customer' type='text'></p>
            <table class="order-table" id="sum-order"></table>
          </section>


          <footer class="order-footer">
            <div class="order-button">
              <button type="submit" class="btn btn-primary">ORDER NOW</button>
            </div>
          </footer>
        </form>
      </section>


    </main>
</body>

</html>
